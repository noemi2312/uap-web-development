<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Gestor de tareas server-side">
    <title>Gestión de tareas</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Urbanist:wght@300;400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <header class="fondo-seccion">
        <h1 class="titulo-principal">Gestión de tareas</h1>
    </header>

    <main class="contenedor-principal">
        <form action="/tasks" method="POST" class="formulario">
            <div class="input-container">
                <input type="text" name="text" placeholder="Escribe tu tarea" required>
                <button type="submit">OK</button>
            </div>
        </form>

        <section class="seccion-tareas">
            <h2 class="titulo-secundario">Lista de Tareas</h2>
            <ul class="lista-tareas">
                <% tasks.forEach(task => { %>
                    <li class="tarea <%= task.completed ? 'completada' : '' %>">
                        <form action="/tasks/<%= task.id %>/toggle" method="POST" style="display: inline;">
                            <button type="submit" class="checkbox-btn" aria-label="<%= task.completed ? 'Desmarcar' : 'Marcar' %> tarea">
                                <span class="checkbox <%= task.completed ? 'checked' : '' %>"></span>
                            </button>
                        </form>
                        <span><%= task.text %></span>
                        <div class="acciones">
                            <form action="/tasks/<%= task.id %>/delete" method="POST">
                                <button type="submit" class="delete-btn" aria-label="Eliminar tarea">
                                    <img class="recycle-bin" src="/images/recycle_bin.png" alt="">
                                </button>
                            </form>
                        </div>
                    </li>
                <% }); %>
            </ul>
            <form action="/tasks/clear-completed" method="POST">
                <button type="submit" class="btn-clear">Clear Completed</button>
            </form>
        </section>

        <div class="filtros">
            <a href="/?filter=all" class="btn-filter <%= filter === 'all' ? 'active' : '' %>">Todas</a>
            <a href="/?filter=active" class="btn-filter <%= filter === 'active' ? 'active' : '' %>">Activas</a>
            <a href="/?filter=completed" class="btn-filter <%= filter === 'completed' ? 'active' : '' %>">Completadas</a>
        </div>
    </main>
</body>
</html>